{
  "name": "sv-comp-verifiers",
  "displayName": "SV-Comp verifiers",
  "description": "",
  "author": "Karoliine Holter",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sws-lab/sv-comp-witness-vscode"
  },
  "publisher": "sws-lab",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:c"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "c",
        "aliases": [
          "C",
          "c"
        ],
        "extensions": [
          ".c",
          ".h",
          ".i"
        ]
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "witnessPanelContainer",
          "title": "Witnesses",
          "icon": ""
        }
      ]
    },
    "views": {
      "witnessPanelContainer": [
        {
          "type": "webview",
          "id": "witnessPanel",
          "name": "run analyzers"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "cp ../target/sv-comp-witness-vscode-0.0.1.jar sv-comp-witness-vscode-0.0.1.jar && npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
